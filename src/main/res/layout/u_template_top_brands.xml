<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/c3"
              android:id="@+id/ll_top_hot"
              android:orientation="horizontal"
              android:paddingBottom="3.0dip"
              android:paddingLeft="15.0dip"
              android:paddingTop="13.0dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33.0dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_top_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="热门品牌 "
                android:textColor="@color/c_000000"
                android:textSize="12.0sp"/>

            <TextView
                android:id="@+id/tv_top_tran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="| HOT Brands "
                android:textColor="@color/c7"
                android:textSize="12.0sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/moreTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="-10.0dip"
            android:drawableRight="@drawable/ico_jiantou"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="更多"
            android:textColor="@color/c7"
            android:textSize="11sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_three_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_more_a"
            android:visibility="gone"/>
    </LinearLayout>


    <View style="@style/divider_line_style2"/>
</LinearLayout>